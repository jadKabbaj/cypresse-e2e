{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom", "es2015"],
    "types": ["cypress", "node", "mocha"],  // <-- Add "mocha" here
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../node_modules/cypress/types/cypress.d.ts"
  ],
  "exclude": ["node_modules"]
}
